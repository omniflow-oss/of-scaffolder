<project xmlns="http://maven.apache.org/POM/4.0.0">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>{{groupId}}</groupId>
    <artifactId>platform-starter</artifactId>
    <version>{{platformVersion}}</version>
    <relativePath>../../platform-starter/pom.xml</relativePath>
  </parent>

  <artifactId>{{serviceName}}</artifactId>

  <dependencies>
    <!-- scaffolder:service-deps:start -->
    <!-- scaffolder:service-deps:end -->
{{#each internalLibs}}
    <dependency>
      <groupId>{{../groupId}}</groupId>
      <artifactId>{{this}}</artifactId>
    </dependency>

{{/each}}

    <!-- scaffolder:quarkus-ext:start -->
{{#each quarkusExtensions}}
    <dependency>
      <groupId>io.quarkus</groupId>
      <artifactId>{{this}}</artifactId>
    </dependency>

{{/each}}
    <!-- scaffolder:quarkus-ext:end -->
{{#each testDependencies}}
    <dependency>
      <groupId>{{groupId}}</groupId>
      <artifactId>{{artifactId}}</artifactId>
{{#if version}}
      <version>{{version}}</version>
{{/if}}
{{#if scope}}
      <scope>{{scope}}</scope>
{{/if}}
    </dependency>
{{/each}}
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>io.quarkus</groupId>
        <artifactId>quarkus-maven-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>build</goal>
              <goal>generate-code</goal>
              <goal>generate-code-tests</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
